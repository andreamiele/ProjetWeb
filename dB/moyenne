
CREATE DATABASE Histoires;
USE Histoires;
-- Table : ADVANCEMENT
CREATE TABLE ADVANCEMENT (
     User_iD      INT     PRIMARY KEY NOT NULL,
     S1_Vesyl     INT     DEFAULT (0),
     S1_Yskad     INT     DEFAULT (0),
     S1_Amulette  BOOLEAN DEFAULT (FALSE),
     S1_Chien     BOOLEAN DEFAULT (FALSE),
     S1_Bague     BOOLEAN DEFAULT (FALSE),
     S1_Energie   BOOLEAN DEFAULT (FALSE),
     S1_Pouvoir   BOOLEAN DEFAULT (FALSE),
     S1_Sapience  BOOLEAN DEFAULT (FALSE),
     S1_Multitude BOOLEAN DEFAULT (FALSE) 
    );


    -- Table : PARAGRAPHS
CREATE TABLE PARAGRAPHS (
     S_ID       INT    NOT NULL,
     P_ID       INT    NOT NULL,
     text       TEXT   NOT NULL,
     back_image TEXT,
     image      TEXT,
     sound      TEXT,
     nbTrophee  INT
    );


    -- Table : STORIES
    CREATE TABLE STORIES (
        S_ID        INT    PRIMARY KEY
                        NOT NULL,
        title       TEXT NOT NULL,
        `desc`      TEXT   NOT NULL,
        tag         TEXT,
        create_date DATE   NOT NULL,
        vues        INT    NOT NULL
    );


    -- Table : USERS
    CREATE TABLE USERS (
        User_ID       INT     PRIMARY KEY
                            NOT NULL,
        login         TEXT  NOT NULL,
        password      TEXT  NOT NULL,
        profile_image TEXT,
        nbTrophees    INT,
        P_S_1         INT,
        P_S_2         INT,
        P_S_3         INT,
        admin         BOOLEAN NOT NULL
    );

